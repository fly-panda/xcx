/* flightInfo */
.flightTitle {
  margin-bottom: 20rpx;
  color: #888;
}
.flightInfo {
  position: relative;
  align-items: center;
}
.flight-line {
  position: absolute;
  width: 2px;
  background: #e5e5e5;
  height: 76%;
  left: 140rpx;
  top: 12%;
  box-sizing: border-box;
}
.flight-line::before {
  position: absolute;
  left: -2px;
  width: 4px;
  height: 4px;
  /* background-color: currentColor; */
  color: #e5e5e5;
  content: '';
  border-radius: 50%;
  border: 1px solid #e5e5e5;
}
.flight-line::after {
  position: absolute;
  bottom: 0;
  left: -2px;
  width: 4px;
  height: 4px;
  /* background-color: currentColor; */
  color: #e5e5e5;
  content: '';
  border-radius: 50%;
  border: 1px solid #e5e5e5;
}
.flightTime {
  font-size: 16px;
  width: 80rpx;
}
